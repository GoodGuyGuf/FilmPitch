<main>
  <h2>Create New Project</h2>
  <div>
    <%= form_with model: @project, class: "new-project-form" do |f| %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <div>
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: "Name" %>
      </div>

      <div>
        <%= f.label :description %>
        <%= f.text_area :description, placeholder: "Description" %>
      </div>

      <div>
        <%= f.label :goal %>
        <%= f.number_field :goal, placeholder: "Goal" %>
      </div>

      <div>
        <%= f.label :film_type %>
        <%= f.text_field :film_type, placeholder: "'short film', 'feature'" %>
      </div>

      <div>
        <%= f.label :genre %>
        <%= f.text_field :genre, placeholder: "Horror, Comedy" %>
      </div>

      <div>
        <%= f.label :story_structure %>
        <%= f.text_field :story_structure, placeholder: "3 Act Structure" %>
      </div>

      <div>
        <%= f.label :themes %>
        <%= f.text_field :themes, placeholder: "symbolism" %>
      </div>

      <div>
        <%= f.label :link %>
        <%= f.text_field :link, placeholder: "Project video, website, etc." %>
      </div>

      <div>
        <%= f.submit "Submit" %>
      </div>
    <% end %>
  </div>
</main>