<main id="root-main">
  <nav>
    <ul id="projects-nav">
      <li><%= link_to  "Popular", popular_projects_projects_path %></li>
      <li><%= link_to  "New", new_projects_projects_path %></li>
      <li><%= link_to  "Fully Funded", fully_funded_projects_path %></li>
      <li><%= link_to  "Genres", genres_projects_path %></li>
      <li><%= link_to  "Film Types", film_types_projects_path %></li>
    </ul>
  </nav>
  <article>
    <h2>Featured</h2>
    <section>
      <% @projects.each do |p|%>
        <div>
          <h3><%=p.name%></h3>
          <p>Posted by: <%=p.user.display_name%></p>
          <p><%=p.description%></p>
          <p>$<%=p.goal%></p>
        </div>
      <%end%>
    </section>
  </article>
</main>