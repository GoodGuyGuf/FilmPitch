<main id="root">
  <article>
    <h2>Featured</h2>

    <section id="featured-projects">

      <div id="featured">
        <% if @featured.cover_image.attached? %>
          <div class="featured-image-container">
            <div 
            class="featured-project-image" 
            style="background-image: url('<%= rails_blob_url(@featured.cover_image) %>');">
            </div>
          </div>
        <% end %>

        <div class="featured-project-info">
          <h3><%= link_to @featured.name, @featured, data: {turbolinks: "false"} %></h3>
          <p>Posted by: <%=@featured.user.display_name%></p>
          <p>Funding Goal: <%=humanized_money_with_symbol @featured.goal%></p>
          <p><%= @featured.description %></p>
        </div>

      </div>

      <div id="projects">
        <% @projects.reverse.each do |project|%>
          <div class="project-container">

            <div class="project-positioning-container">

              <div class="image-container">

                <% if project.cover_image.attached? %>
                  <div class="project-image" 
                    style="background-image: url('<%= rails_blob_url(project.cover_image) %>');">
                  </div>
                <% else %>
                  <div class="project-image" 
                    style="background-image: url('<%= asset_path 'photo-missing.png' %>');">
                  </div>
                <% end %>
                
              </div>

              <div class="project-info">
                <h3><%= link_to project.name, project, data: {turbolinks: "false"} %></h3>
                <p>Posted by: <%=project.user.display_name%></p>
                <p>Funding Goal: <%= humanized_money_with_symbol project.goal %></p>
              </div>

            </div>

          </div>
        <%end%>
      </div>
    </section>
    
  </article>
</main>